<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kotel.hanzan.Settings"
    android:background="@color/white"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/upperBar"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/settings_back"
                android:layout_width="@dimen/upperBarIconWidth"
                android:layout_height="match_parent"
                android:paddingTop="@dimen/backButtonPadding"
                android:paddingBottom="@dimen/backButtonPadding"
                android:src="@drawable/back"
                android:layout_marginLeft="5dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textSize="@dimen/upperBar_MainFontSize"
                android:textColor="@color/black"
                android:text="@string/settings"
                android:paddingLeft="5dp"
                />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="50dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/setting_optionHeight"
            android:layout_marginLeft="@dimen/setting_sideMargin"
            android:layout_marginRight="@dimen/setting_sideMargin"
            android:background="@drawable/roundbox_maincolor"
            android:textColor="@color/white"
            android:textSize="@dimen/setting_textFontSize"
            android:gravity="center"
            android:text="@string/termCondition"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="25dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/setting_optionHeight"
            android:layout_marginLeft="@dimen/setting_sideMargin"
            android:layout_marginRight="@dimen/setting_sideMargin"
            android:background="@drawable/roundbox_maincolor"
            android:textColor="@color/white"
            android:textSize="@dimen/setting_textFontSize"
            android:gravity="center"
            android:text="@string/announcement"
            />

        <View
        android:layout_width="match_parent"
        android:layout_height="60dp"
        />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/setting_sideMargin"
            android:layout_marginRight="@dimen/setting_sideMargin"
            >

            <ImageView
                android:id="@+id/settings_facebook"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/setting_roundIconSize"
                android:src="@drawable/facebookicon"
                android:tint="@color/Blue"
                />

            <ImageView
                android:id="@+id/settings_instagram"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/setting_roundIconSize"
                android:src="@drawable/test"
                />

            <ImageView
                android:id="@+id/settings_website"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/setting_roundIconSize"
                android:src="@drawable/test"
                />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
