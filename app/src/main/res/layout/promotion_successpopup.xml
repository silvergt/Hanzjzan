<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/leftRightMargin"
        android:background="@drawable/roundbox_white"
        android:layout_marginLeft="@dimen/leftRightMargin"
        android:layout_marginRight="@dimen/leftRightMargin"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/black"
            android:text="@string/promotionCodeApplied"
            android:gravity="center"
            android:textSize="@dimen/promotion_mainFontSize"
            />

        <View
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            />

        <TextView
            android:id="@+id/promotion_successConfirm"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/promotion_buttonHeight"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/roundbox_maincolor"
            android:text="@string/confirm"
            android:textSize="@dimen/promotion_mainFontSize"
            android:textColor="@color/white"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            />

    </LinearLayout>

</RelativeLayout>