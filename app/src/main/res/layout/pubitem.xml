<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="10dp"
    >

    <LinearLayout
        android:id="@+id/pubitem_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/pubitem_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/test"
            />

        <TextView
            android:id="@+id/pubitem_text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/pubitem_text1"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp"
            >

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/location"
                />

            <TextView
                android:id="@+id/pubitem_text2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/pubitem_text2"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                />
        </LinearLayout>


        <TextView
            android:id="@+id/pubitem_text3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/pubitem_text3"
            />
        
        <View
            android:layout_width="match_parent"
            android:layout_height="15dp"
            />

    </LinearLayout>

    <ImageView
        android:id="@+id/pubitem_favorite"
        android:layout_width="@dimen/pubitem_favorite"
        android:layout_height="@dimen/pubitem_favorite"
        android:paddingLeft="15dp"
        android:paddingRight="5dp"
        android:paddingBottom="15dp"
        android:paddingTop="5dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/favorite_unselected"
        />

</RelativeLayout>