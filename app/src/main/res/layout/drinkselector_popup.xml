<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/roundbox_white"
        >


        <kotel.hanzan.view.ProfileCircleImageView
            android:id="@+id/drinkSelectorDialog_drinkImage"
            android:layout_width="@dimen/drinkSelectorDialog_imageHeight"
            android:layout_height="@dimen/drinkSelectorDialog_imageHeight"
            android:layout_gravity="center"
            android:src="@drawable/test"
            android:layout_marginTop="30dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="@dimen/drinkSelectorDialog_leftRightMargin"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="@dimen/drinkSelectorDialog_leftRightMargin"
                >
                <TextView
                    android:id="@+id/drinkSelectorDialog_text1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="우주술집펍에서 제공하는\n카스 병맥주로 하시겠습니까?"
                    android:textColor="@color/black"
                    android:textSize="@dimen/drinkSelectorDialog_subFontSize"
                    android:gravity="center_horizontal"
                    />

                <TextView
                    android:id="@+id/drinkSelectorDialog_text2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="카스 병맥주\n한잔 주세요!"
                    android:lineSpacingExtra="10dp"
                    android:textStyle="bold"
                    android:textSize="@dimen/drinkSelectorDialog_BigFontSize"
                    android:textColor="@color/black"
                    android:gravity="center_horizontal"
                    />

            </RelativeLayout>

            <TextView
                android:id="@+id/drinkSelectorDialog_button1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/drinkSelectorDialog_buttonHeight"
                android:background="@drawable/roundbox_maincolor"
                android:gravity="center"
                android:text="네, 맞아요"
                android:textColor="@color/white"
                android:textSize="@dimen/drinkSelectorDialog_subFontSize"
                android:layout_marginBottom="20dp"
                />

            <TextView
                android:id="@+id/drinkSelectorDialog_button2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/drinkSelectorDialog_buttonHeight"
                android:background="@drawable/roundbox_gray"
                android:gravity="center"
                android:text="다시 생각해볼게요"
                android:textColor="@color/white"
                android:textSize="@dimen/drinkSelectorDialog_subFontSize"
                />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>