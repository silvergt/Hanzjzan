<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/announcement_itemHeight">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray"
        />

    <TextView
        android:id="@+id/announcement_itemText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/leftRightMargin"
        android:text="Announcement description"
        android:textColor="@color/black"
        android:textSize="@dimen/announcement_titleFontSize"
        />

</RelativeLayout>