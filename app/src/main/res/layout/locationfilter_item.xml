<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/locationFilter_itemMargin"
    android:layout_marginLeft="@dimen/locationFilter_itemMargin"
    android:layout_marginRight="@dimen/locationFilter_itemMargin"
    >

    <TextView
        android:id="@+id/locationFilter_comingSoon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/comingSoon"
        android:gravity="center"
        android:textSize="@dimen/locationFilter_comingSoonFontSize"
        android:textColor="@color/darkGray"
        />

    <TextView
        android:id="@+id/locationFilter_locationName"
        android:layout_width="match_parent"
        android:layout_height="@dimen/locationFilter_itemHeight"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/locationFilter_itemFontSize"
        android:background="@drawable/roundbox_maincolor_hollow"
        />

</LinearLayout>